{
    "bundles": {
        "Lingoda\\AiBundle\\LingodaAiBundle": ["all"]
    },
    "copy-from-recipe": {
        "config/": "%CONFIG_DIR%/"
    },
    "env": {
        "#1": "###> lingoda/ai-bundle ###",
        "#2": "# Configure your AI provider API keys",
        "OPENAI_API_KEY": "",
